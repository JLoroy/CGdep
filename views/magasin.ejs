                            <div class="col-md-6">
                                <p class="form-control-static">{{commande.Remarque}}</p>
                            </div>
                        </div>
                    </form>
                    <button id="doPrint" class="btn btn-lg btn-primary col-md-1">Imprimer</button>
                </div>
        </div>
