<body ng-app="magasin" style="height:100%;">

<!-- CHOIX VENDEUSE -->
<div ng-controller="choixVendeuse" style="height:100%;">
    <ul class="nav nav-pills" role="tablist">
        <li ng-repeat="magasin in magasins" class="{{magasin.idMagasin==activeTab?'active':''}}">
            <a ng-click="activeTab = magasin.idMagasin" role="tab" data-toggle="tab">
                {{magasin.Nom}}
            </a>
        </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content" style="height:100%;">
        <div ng-repeat="magasin in magasins" ng-if="magasin.idMagasin == activeTab" style="height:100%;">
            <table class="table table-bordered col-md-12" style="height:90%;">
                <tr>
                    <td class="col-md-3 btn btn-default btn-lg vcenter" style="height:50% !important;">
                        blabla
                    </td>
                </tr>
            </table>
        </div>
    </div>




</body>