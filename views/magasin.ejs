    <meta charset="utf-8">
    <script src="/jquery.js"></script>
    <script src="/bootstrap/js/bootstrap.js"></script>
    <script src="/bootstrap/js/bootstrap-datepicker.js"></script>
    <script src="/bootstrap/js/typeahead.js"></script>
    <script src="/bootstrap/js/handlebars.js"></script>
    <link href="/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/bootstrap/css/datepicker.css" rel="stylesheet" />
    <link href="/bootstrap/css/typeahead.css" rel="stylesheet" />
    <link href="/stylesheets/magasin.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js"></script>
    <script src="javascripts/magasin.js"></script>
    <title>Application de commande</title>
</head>
<body ng-app="magasin" class="h100">
<!-- CHOIX VENDEUSE -->
    <div ng-controller="choixVendeuse" class="h100">

        <div ng-show="! ok">Loading</div>
        <div ng-show="ok">
            <h4>Choisir Vendeuse</h4>
            <ul class="nav nav-pills" role="tablist">
                <li ng-repeat="magasin in magasins" ng-if="magasin.display == 1" ng-class="activeClass(magasin.idMagasin)">
                    <a href="#mag{{magasin.idMagasin}}" ng-click="activeTab = magasin.idMagasin" role="tab" data-toggle="tab">
                        {{magasin.Nom}}
                    </a>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content h100">
                <table id="mag{{magasin.idMagasin}}" ng-repeat="magasin in magasins" ng-if="magasin.display == 1"
                       class="table table-bordered col-md-12 tab-pane" style="height:90%;" ng-class="activeClass(magasin.idMagasin)">
                    <tr>
                        <td class="col-md-3 btn btn-default btn-lg vcenter" style="height:50% !important;">
                            {{magasin.Adresse}}
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div ng-controller="rootScopeVisualController">

        <h4>RootScope : </h4>
        <table>
            <thead>
            <th>Magasin</th>
            <th>magasins</th>
            </thead>
            <tbody>
            <tr>
                <td><input type="text" ng-model="sess.magasin.Nom"></td>
                <td><input type="text" ng-model="magasins.length"></td>
            </tr>

            </tbody>
        </table>
    </div>




</body>