<!DOCTYPE html>
<head>
    <meta charset="utf-8">
    <script src="/jquery.js"></script>
    <script src="/bootstrap/js/bootstrap.js"></script>
    <script src="/bootstrap/js/bootstrap-datepicker.js"></script>
    <script src="/bootstrap/js/typeahead.js"></script>
    <script src="/bootstrap/js/handlebars.js"></script>
    <link href="/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="/bootstrap/css/datepicker.css" rel="stylesheet" />
    <link href="/bootstrap/css/typeahead.css" rel="stylesheet" />
    <link href="/cgcss.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js"></script>
    <script src="javascripts/newSession.js"></script>
    <title>Nouvelle Session</title>
</head>
<body ng-app="newSession">
    <div class="modal fade" ng-controller="newSessionController">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Nouvelle session</h4>
                </div>
                <div class="modal-body">
                    <ul class="nav nav-pills" role="tablist">
                        <li ng-repeat="magasin in magasins">
                            {{magasin.Nom}}
                            <label class="btn btn-lg btn-primary" ng-repeat="terminal in terminals" ng-if="terminal.Magasin_idMagasin == magasin.idMagasin">
                                <input type="radio" ng-model="data.terminal" ng-value="terminal.idTerminal">{{Terminal.idTerminal}}
                            </label>
                        </li>
                    </ul>
                    <button class="btn btn-primary" ng-click="sendSession();">Confirmer</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>